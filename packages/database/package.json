{
	"name": "@packages/database",
	"version": "1.0.0",
	"exports": {
		"./*": "./src/*.ts",
		"./convex/shared/*": "./convex/shared/*.ts",
		"./convex/*": {
			"types": "./convex/*.d.ts",
			"default": "./convex/*.js"
		}
	},
	"scripts": {
		"with-env": "bun run --env-file=../../.env",
		"with-env:prod": "bun run --env-file=../../.env.production",
		"deploy": "bun run with-env:prod convex deploy",
		"codegen": "bunx convex codegen && bun run scripts/generate-function-types.ts",
		"generate:auth-schema": "cd convex/betterAuth && bunx @better-auth/cli generate -y --output generatedSchema.ts",
		"generate-function-types": "bun run scripts/generate-function-types.ts",
		"generate-function-types:watch": "chokidar \"convex/{public,authenticated,private}/**/*.ts\" -c \"bun run scripts/generate-function-types.ts\"",
		"dev": "bun run scripts/dev.ts",
		"typecheck": "tsgo -p convex/tsconfig.json --noEmit & tsgo -p tsconfig.json --noEmit & wait",
		"typecheck:slow": "tsc -p convex/tsconfig.json --noEmit & tsc -p tsconfig.json --noEmit & wait",
		"clean": "rm -rf node_modules .turbo",
		"test": "vitest run --no-watch --pool=forks",
		"test:watch": "vitest",
		"convex:knip": "bun scripts/find-unused-convex-functions.ts",
		"env:sync:prod": "bun run scripts/sync-env-prod.ts"
	},
	"dependencies": {
		"@convex-dev/action-cache": "^0.3.0",
		"@convex-dev/better-auth": "catalog:",
		"@effect-atom/atom": "catalog:",
		"@convex-dev/migrations": "^0.3.1",
		"@convex-dev/rate-limiter": "^0.3.2",
		"@packages/confect": "workspace:*",
		"better-auth": "catalog:",
		"convex": "catalog:",
		"convex-helpers": "^0.1.104",
		"effect": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@edge-runtime/vm": "catalog:",
		"@types/node": "catalog:",
		"chokidar-cli": "^3.0.0",
		"dotenv": "^17.2.3",
		"glob": "^11.1.0",
		"vitest": "catalog:"
	}
}
