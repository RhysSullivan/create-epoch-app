{
	"extends": "@packages/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			},
			{
				"name": "@packages/confect-ts-plugin"
			}
		],
		"jsx": "preserve",
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"paths": {
			"@/.source/*": ["./.source/*"],
			"@/*": ["./src/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
